@model CompanyDemo.Tables.ExtendedIdentityRole

<h1 class="bg-info text-white">Update Role</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="roleName" value="@Model.Name" />
    <input type="hidden" name="roleId" value="@Model.Id" />

    <h2 class="bg-info p-1 text-white">Add To @Model.Name</h2>


    <h2 class="bg-info p-1 text-white">Remove From @Model.Name</h2>

    <button type="submit" class="btn btn-primary">Save</button>
</form>