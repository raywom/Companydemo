@model IEnumerable<CompanyDemo.Tables.ExtendedIdentityRole>

<div class="container mucho-margin-top">
    <br />
    <h1 class="bg-info text-white text-center mt-2">All Roles</h1>
    <table class="table table-striped table-dark table-hover">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Users</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td i-role="@role.Name"></td>
                <td><a class="btn btn-sm btn-primary" asp-controller="Roles" asp-action="Index" asp-route-id="@role.Id">Update</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    
    <a asp-action="Create" class="btn btn-secondary">Create a Role</a>
</div>